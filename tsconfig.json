{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "module": "commonJS",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "pretty": true,
        "removeComments": true,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "es2017"
    }
}